{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}

<div class="formations">
<table>
    <tr>
        <th colspan="3">liste des formations</th>
    </tr>
    <tr>
        <th>Nom formation</th>

    </tr>
{% for formation in formations %}
<tr>
    <td>{{ formation.nomFormation }}</td>
    <td class="iconEditRemove"> <a href="{{ path ('supprimer_formation',{'id':formation.id}) }}"><i class="fa-regular fa-trash-can"></i></a></td>
    <td class="iconEditRemove"><a href=" {{ path ('edit_formation',{'id':formation.id})  }}"><i class="fa-regular fa-pen-to-square"></i></a> </td>
</tr>

{% endfor %}
<tr> 
     <td colspan="3">   
        {{ form_start(formAddFormation) }}
            {{ form_row(formAddFormation.nomFormation,{ 'label': 'NOM DE LA FORMATION' }) }}
            {{ form_row(formAddFormation.submit, { 'label': 'Ajouter' }) }}
        {{ form_end(formAddFormation) }}
    </td>
</tr>

</table>


</div>
{% endblock %}
