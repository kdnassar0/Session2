{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}


<div class="sessions">

<table>
    <tr >
        <th colspan="8"> Liste des sessions Passees </th>
    </tr>
    <tr>
      
        <th class="champFormation">Nom Formation</th>
        <th>Nom Session</th>
        <th>Date Début</th>
        <th>Date Fin</th>
        <th>NB Places</th>
        <th>Reference</th>
        <th>Edition</th>
        <th class="champ">Suppression</th>
     
    </tr>
{% for session in SessionsPassees %}

