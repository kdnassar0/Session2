            <td data-label ='Nb des Places :' > {{ session.stagiaires |length  }}/{{ session.nbPlaceTotal }} </td>
            <td data-label ='Referent :'>{{ session.reference }}</td>
          
            <td class="iconEditRemove"><a href=" {{ path ('edit_session',{'id':session.id})  }}"><i class="fa-regular fa-pen-to-square"></i></a> </td>
            <td class="iconEditRemove"> <a href="{{ path ('delete_session',{'id':session.id}) }}"><i class="fa-regular fa-trash-can"></i></a></td>
        

