{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
<div class="toutsPageSession">
<div class="formulaireSession">
        
    {{ form_start(formAddSession) }}
    <div class="champFormSession">
        {{ form_row(formAddSession.nomSession, {'label': 'Nom Session'}) }}
        {{ form_row(formAddSession.dateDebut)}}
        {{ form_row(formAddSession.dateFin) }}
        {{ form_row(formAddSession.nbPlaceTotal) }}
        {{ form_row(formAddSession.reference) }}
        {{ form_row(formAddSession.formation) }}
        {{ form_row(formAddSession.adress) }}
        {{ form_row(formAddSession.submit) }}

    {{ form_end(formAddSession) }}
    </div> 
    
    </div>
<div class="sessionElements">
  
    <div class="sessions">
    <table>
        <tr >
            <th colspan="9"> Liste des sessions Passees </th>
        </tr>
        <tr>

           <th>Statut</th>
            <th >Nom Formation</th>
            <th>Nom Session</th>
            <th>Date Début</th>
            <th>Date Fin</th>
            <th>NB Places</th>
            <th>Referent</th>
            <th>Edition</th>
            <th class="champ">Suppression</th>
        
        </tr>
    {% for session in SessionsPassees %}

        <tr>
             <td data-label ='statut'>{% if session.stagiaires | length == session.nbPlaceTotal %}
                <span><i class="uil uil-check-circle"></i></span>
                {% else %}   <span><i class="uil uil-check"></i></span>
                {% endif %}
               
               
            </td>
